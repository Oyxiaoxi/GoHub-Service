# Elasticsearch 配置

# 是否启用Elasticsearch搜索
ELASTICSEARCH_ENABLED=true

# Elasticsearch服务地址
ELASTICSEARCH_HOST=http://localhost:9200

# Elasticsearch认证(可选)
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# 连接超时时间(毫秒)
ELASTICSEARCH_TIMEOUT=30000

# 索引配置
ELASTICSEARCH_INDEX_NAME=gohub-topics
ELASTICSEARCH_SHARDS=3
ELASTICSEARCH_REPLICAS=1
ELASTICSEARCH_REFRESH_INTERVAL=1s

# 性能配置
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_BULK_SIZE=1000
ELASTICSEARCH_FLUSH_INTERVAL=5000
ELASTICSEARCH_CONCURRENT_BULKS=5
